{
    "project_name": "smoltts_160m_librispeech",
    "checkpoint_path": "../checkpoints",
    "model_path": "pretrained_model",
    "batch_size": 16,
    "max_epochs": 8,
    "num_workers": 4,
    "gradient_clip": 1.0,
    "learning_rate": 3e-4,
    "lr_start": 1e-3,
    "lr_warmup_steps": 7000,
    "weight_decay": 0.01,
    "betas": [
        0.90,
        0.95
    ],
    "eps": 1e-5,
    "val_every_n_steps": 200,
    "save_every_n_steps": 500,
    "max_sequence_length": 768,
    "use_bf16": true,
    "use_wandb": true,
    "use_pretrained": false
}