{
    "project_name": "smoltts_160m_librispeech",
    "checkpoint_path": "../checkpoints",
    "model_path": "pretrained_model",
    "batch_size": 28,
    "max_epochs": 10,
    "num_workers": 4,
    "gradient_clip": 1.0,
    "learning_rate": 1e-3,
    "lr_start": 1e-5,
    "lr_warmup_steps": 400,
    "weight_decay": 0.01,
    "betas": [
        0.9,
        0.95
    ],
    "eps": 1e-5,
    "val_every_n_steps": 200,
    "save_every_n_steps": 5000,
    "max_sequence_length": 512,
    "use_bf16": true,
    "use_wandb": true,
    "use_pretrained": false
}